<div class="container">
  <% if @episode %>
    <h2><%= @episode['title'] %></h2>
    <% if @episode['series'] == "Breaking Bad" %>
      <a href="/breaking/<%= @episode['season'] %>"><p>Temporada: <%= @episode['season'] %></p></a>
    <% else %>
      <a href="/better/<%= @episode['season'] %>"><p>Temporada: <%= @episode['season'] %></p></a>
    <% end %>
    <p>Episodio: <%= @episode['episode'] %></p>
    <p><i class="fas fa-film"></i> Serie: <%= @episode['series'] %></p>
    <p><i class="fas fa-calendar-day"></i> Fecha de emisión: <%= @emision %></p>
    <% if @characters_list.length() > 0 %>
      <h3><i class="fas fa-users"></i> Personajes:</h3>
      <% @characters_list.each do |character| %>
        <a href="/characters/<%= character['char_id'] %>"><p><%= character['name'] %></p></a>
      <% end %>
    <% else %>
      <p>No se registran personajes para este capítulo</p>
    <% end %>
  <% else %>
    <p>Este episodio no está disponible</p>
  <% end %> 
  
</div>